# Database
POSTGRES_URL=postgresql://user:password@host:5432/dbname
# Use a direct (non-pooling) connection string for migrations if your provider supports it.
POSTGRES_URL_NON_POOLING=

# Authentication - Better Auth
# Generate a 32+ char secret using https://www.better-auth.com/docs/installation
BETTER_AUTH_SECRET=replace-with-secure-secret

# App URL (for production deployments)
NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"

# AI Integration via OpenRouter (Optional - for chat functionality)
# Get your API key from: https://openrouter.ai/settings/keys
# View available models at: https://openrouter.ai/models
OPENROUTER_API_KEY=
OPENROUTER_MODEL="openai/gpt-4o-mini"

# Optional - for vector search only
OPENAI_EMBEDDING_MODEL="text-embedding-3-large"

# Email delivery (optional but recommended)
RESEND_API_KEY=
RESEND_FROM_EMAIL="TherapistOS <noreply@your-domain.com>"

# File storage (optional - if app required file uploads)
BLOB_READ_WRITE_TOKEN=

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Polar payment processing
# Get these from: https://sandbox.polar.sh/dashboard (sandbox) or https://polar.sh/dashboard (production)
POLAR_WEBHOOK_SECRET=
POLAR_ACCESS_TOKEN=

# Docker compose service overrides (optional - defaults live in docker-compose.yml)
POSTGRES_DB=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_PORT=
REDIS_URL=
REDIS_PORT=
WORKER_PORT=
WORKER_QUEUE_NAME=
WORKER_CONCURRENCY=
WORKER_JOB_ATTEMPTS=
WORKER_JOB_BACKOFF_MS=
WORKER_API_TOKEN=
WORKER_LOG_LEVEL=
